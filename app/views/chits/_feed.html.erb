<% @chits.each do |chit| %>
    <div class='box'>
    <article class='media'>
      <div class='media-left'>
        <figure class='image is=64x64'>
          <img src="https://opengameart.org/sites/default/files/styles/medium/public/Pixel_Bird_png_0.png">
        </figure>
      </div>
      <div class='media-content'>
      <div class='content'>
        <strong>Joe Doe</strong><br>
        <small>@joe_doe</small>
        <p><%= chit.chit%></p>
          </div>
          <nav class='level'>
          <div class='leve-left is-mobile'>
          <%= link_to chit, class: 'level-item' do %>
          <span class='icon'><i class='fa fa-link' aria-hidden='true'></i></span>
        <%end%>
          <%= link_to edit_chit_path(chit), class:'level-item' do %>
          <span class='icon'><i class='fa fa-pencil' aria-hidden='true'></i></span>
        <%end%>

          <%= link_to chit, method: :delete, data: {confirm: "Are you sure you want to delete this Chit?"}  do %>

          <span class='icon'><i class='fa fa-trash-o' aria-hidden='true'></i></span>
        <%end%>

          </div>

          </div>
          </nav>
        </div>
      </article>
    </div>
    <% end %>
    </div>